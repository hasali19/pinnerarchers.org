---
import NavBarMenuButton from "./NavBarMenuButton.astro";
import logo from "../assets/PA Logo.png";
import { Image } from "astro:assets";
import NavBarItem from "./NavBarItem.astro";

const menuItems = [
  { title: "Home", path: "/" },
  { title: "About", path: "/about" },
  {
    title: "Members",
    items: [{ title: "Calendar", path: "/members/calendar" }],
  },
  { title: "Courses", path: "/courses" },
  { title: "Contact Us", path: "/contact" },
  { title: "Join Us", path: "/join-us" },
];
---

<header>
  <div
    class="relative flex flex-wrap sm:justify-start sm:flex-nowrap w-full text-sm py-3"
  >
    <nav
      class="max-w-screen-xl w-full mx-auto px-4 sm:flex sm:items-center sm:justify-between"
    >
      <div class="flex items-center justify-between">
        <a
          class="text-xl font-semibold focus:outline-hidden focus:opacity-80 text-nowrap"
          href="/"
          aria-label="Pinner Archers"
        >
          <span
            class="inline-flex items-center gap-x-4 text-2xl md:text-3xl font-semibold"
          >
            <Image
              src={logo}
              class="logo w-8 md:w-14"
              alt="Pinner Archers Logo"
            />
            Pinner Archers
          </span>
        </a>
        <div class="sm:hidden">
          <NavBarMenuButton />
        </div>
      </div>
      <div
        id="hs-navbar-example"
        class="hidden hs-collapse overflow-hidden transition-all duration-300 grow sm:block"
        aria-labelledby="hs-navbar-example-collapse"
      >
        <div
          class="flex flex-col gap-5 mt-5 text-lg sm:flex-row sm:items-center sm:justify-end sm:mt-0 sm:ps-5 md:text-xl"
        >
          {menuItems.map((item) => <NavBarItem {...item} />)}
        </div>
      </div>
    </nav>
  </div>
</header>
