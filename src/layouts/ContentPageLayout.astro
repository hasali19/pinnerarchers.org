---
import DefaultLayout from "./DefaultLayout.astro";

const { title, columns } = Astro.props.frontmatter || {};
---

<DefaultLayout title={title}>
  <div class="prose-lg" style={`column-count: ${columns || 2};`}>
    <slot />
  </div>
</DefaultLayout>

<style is:global>
  .prose-lg p:first-child {
    margin-top: 0;
  }

  .prose-lg p:last-child {
    margin-bottom: 0;
  }
</style>
