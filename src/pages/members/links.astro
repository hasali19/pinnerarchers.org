---
import Link from "../../components/Link.astro";
import DefaultLayout from "../../layouts/DefaultLayout.astro";

const organisations = [
  {
    name: "Archery GB",
    href: "http://www.archerygb.org/",
    description: "Archery GB (Prev. GNAS)",
  },
  {
    name: "Southern Counties Archery Society",
    href: "http://www.scasarchery.org.uk/",
    description: "SCAS site, including some events & results",
  },
  {
    name: "English Archery Federation",
    href: "http://www.englisharcheryfederation.org/",
    description: "National & International tournament organising body",
  },
  {
    name: "Middlesex County Archery Association",
    href: "https://middlesexarchery.org.uk/",
    description: "Middlesex County Archery Association",
  },
  {
    name: "NFAS",
    href: "http://www.nfas.net/",
    description: "National Field Archery Association",
  },
];

const equipment = [
  {
    name: "Archery World",
    href: "http://www.archeryworld.co.uk/",
  },
  {
    name: "Bow Sports",
    href: "http://www.bowsports.com/",
  },
  {
    name: "Carol Edwards Archery",
    href: "http://www.carolarchery.com/",
    description: "Supplier of longbows and arrows",
  },
  {
    name: "Chiltern Archery",
    href: "https://www.chiltern-archery.co.uk/",
  },
  {
    name: "Clickers Archery",
    href: "http://www.clickersarchery.co.uk/",
  },
  {
    name: "Merlin Archery",
    href: "http://www.merlinarcherycentre.co.uk/",
  },
  {
    name: "Perris Archery",
    href: "Perris archery equipment",
  },
  {
    name: "Quicks",
    href: "http://www.quicks.com/",
  },
];
---

<DefaultLayout title="Useful Links" noImage>
  <div class="root">
    <div>
      <h2 class="my-4 text-2xl">Archery Organisations</h2>
      <div
        class="w-full border border-gray-200 rounded-lg shadow-xs overflow-hidden"
      >
        {
          organisations.map(({ name, href, description }) => (
            <div class="flex flex-col md:flex-row md:py-2 odd:bg-white even:bg-gray-100">
              <div class="px-6 mt-4 mb-2 text-base md:flex-1">
                <Link href={href}>{name}</Link>
              </div>
              <div class="px-6 mt-2 mb-4 text-sm md:flex-1 md:text-base">
                {description ?? ""}
              </div>
            </div>
          ))
        }
      </div>
    </div>
    <div>
      <h2 class="my-4 text-2xl">Archery Equipment</h2>
      <div
        class="w-full border border-gray-200 rounded-lg shadow-xs overflow-hidden"
      >
        {
          equipment.map(({ name, href, description }) => (
            <div class="flex flex-col md:flex-row md:py-2 odd:bg-white even:bg-gray-100">
              <div class="px-6 mt-4 mb-2 text-base md:flex-1">
                <Link href={href}>{name}</Link>
              </div>
              <div class="px-6 mt-2 mb-4 text-sm md:flex-1 md:text-base">
                {description ?? name + " equipment"}
              </div>
            </div>
          ))
        }
      </div>
    </div>
    <p>Links are provided without recommendation.</p>
  </div>
</DefaultLayout>

<style>
  .root > *:not(:first-child) {
    margin-top: calc(var(--spacing) * 10);
  }
</style>
