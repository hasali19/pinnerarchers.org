---
import DefaultLayout from "../layouts/DefaultLayout.astro";

import { Content as MainContent } from "../content/courses/content.md";
import { Content as TableContent } from "../content/courses/table.md";
---

<DefaultLayout title="Courses">
  <div class="prose-lg md:columns-2">
    <MainContent />
  </div>
  <div class="mt-8 overflow-x-auto">
    <TableContent />
  </div>
</DefaultLayout>

<style is:global>
  table {
    width: 100%;
  }

  @reference "../styles/global.css";

  table {
    @apply min-w-full divide-y divide-gray-200;
  }

  th {
    @apply px-6 py-3 text-start font-medium text-gray-500 uppercase;
  }

  tr {
    @apply odd:bg-white even:bg-gray-100;
  }

  td {
    @apply px-6 py-4 whitespace-nowrap font-medium text-gray-800;
  }
</style>
